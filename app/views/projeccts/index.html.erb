<%= form_tag projeccts_path , :method => :get do %>
  <%= label_tag :search %>
  <%= text_field_tag  :search %>
  <%= submit_tag 'search' %>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Owner</th>
    <th>Released date</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projeccts.each do |projecct| %>
  <tr>
    <td><%= projecct.name %></td>
    <td><%= projecct.owner %></td>
    <td><%= projecct.released_date %></td>
    <td><%= projecct.Description %></td>
    <td><%= link_to 'Show', projecct %></td>
    <td><%= link_to 'Edit', edit_projecct_path(projecct) %></td>
    <td><%= link_to 'Destroy', projecct, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

